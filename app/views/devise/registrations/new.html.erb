<%= render 'shared/errors', resource: resource %>
<div class="row justify-content-center">
  <div class="col col-md-4">
    <h2><%= t('.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <p>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control' %>
        </p>
        <p>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
        </p>
        <p>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </p>
        <div class="mb-3">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
          <div class="inner-addon right-addon">
            <%= octicon 'check', width: 38, height: 38, class: 'text-success hide' %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation %>
          <div class="inner-addon right-addon">
            <%= octicon 'alert', width: 38, height: 38, class: 'text-danger hide' %>
            <%= octicon 'check', width: 38, height: 38, class: 'text-success hide' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>

        <%= f.submit t('.sign_up') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
