<%= render 'shared/errors', resource: @feedback %>
<div class="row justify-content-center">
  <div class="col col-md-8">
    <h2><%= t('.new_feedback') %></h2>

    <%= form_with model: @feedback, url: feedback_create_path, local: true do |form| %>
      <div class="form-group">
        <p>
          <%= form.label t('.title'), for: :feedback_title %>
          <%= form.text_field :title, class: 'form-control' %>
        </p>
        <p>
          <%= form.label t('.body'), for: :feedback_body %>
          <%= form.text_area :body, rows: 10, class: 'form-control' %>
        </p>
        <p class="mb-2">
          <%= recaptcha_tags %>
        </p>

        <%= form.submit t('.send') %>
      </div>
    <% end %>
  </div>
</div>
