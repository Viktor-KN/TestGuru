<%= render 'shared/errors', resource: @test %>
<div class="row justify-content-center">
  <div class="col col-md-8">
    <h2><%= test_form_header(@test) %></h2>

    <%= form_with model: [:admin, @test], local: true do |form| %>
      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :level %>
          <%= form.number_field :level, in: 0..10, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all.order(title: :asc), :id, :title, prompt: true, class: 'form-control' %>
        </p>
        <p class="mb-2">
          <%= form.label :time_limit %>
          <%= content_tag :em, t('.time_limit_description') %>
          <%= form.number_field :time_limit, in: 0..Float::INFINITY, class: 'form-control' %>
        </p>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
