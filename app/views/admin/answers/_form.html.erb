<%= render 'shared/errors', resource: @answer %>
<div class="row justify-content-center">
  <div class="col col-md-8">
    <h2><%= answer_form_header(@answer) %></h2>

    <%= form_with model: [:admin, @question, @answer], local: true do |form| %>
      <div class="form-group">
        <p>
          <%= form.label :body %>
          <%= form.text_area :body, class: 'form-control' %>
        </p>
        <div class="form-check mb-2">
          <%= form.label :correct, class: 'form-check-label' do %>
            <%= form.check_box :correct, class: 'form-check-input' %>
            &nbsp<%= t('activerecord.attributes.answer.correct') %>
          <% end %>
        </div>

        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
