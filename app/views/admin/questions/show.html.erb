<p>
  <strong><%= t('activerecord.models.question') %>:</strong>
  <%= @question.body %>
</p>

<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th scope="col"><%= t('activerecord.models.answer') %></th>
      <th scope="col"><%= t('activerecord.attributes.answer.correct') %></th>
      <th scope="col" colspan="3" class="text-center"><%= t('shared.actions') %></th>
    </tr>
    </thead>

    <tbody>
    <%= render @question.answers %>
    </tbody>
  </table>
</div>
<div class="row justify-content-center">
  <div class="col nav">
    <%= link_to t('shared.new_answer'), new_admin_question_answer_path(@question), class: 'nav-link' %>
    <%= link_to t('shared.edit_question'), edit_admin_question_path(@question), class: 'nav-link' %>
    <%= link_to t('shared.delete_question'), admin_question_path(@question), method: :delete, data: { confirm: t('shared.are_you_sure') }, class: 'nav-link' %>
    <%= link_to t('shared.back'), admin_test_path(@question.test), class: 'nav-link' %>
  </div>
</div>
