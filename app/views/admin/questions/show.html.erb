<p>
  <strong><%= t('activerecord.models.question') %>:</strong>
  <%= @question.body %>
</p>

<table>
  <thead>
  <tr>
    <th><%= t('activerecord.models.answer') %></th>
    <th><%= t('activerecord.attributes.answer.correct') %></th>
    <th colspan="3"><%= t('shared.actions') %></th>
  </tr>
  </thead>

  <tbody>
  <%= render @question.answers %>
  </tbody>
</table>
<br>

<%= link_to t('shared.new_answer'), new_admin_question_answer_path(@question) %> |
<%= link_to t('shared.edit_question'), edit_admin_question_path(@question) %> |
<%= link_to t('shared.delete_question'), admin_question_path(@question), method: :delete, data: { confirm: t('shared.are_you_sure') } %> |
<%= link_to t('shared.back'), admin_test_path(@question.test) %>
