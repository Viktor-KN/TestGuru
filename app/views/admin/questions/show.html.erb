<p>
  <strong>Question:</strong>
  <%= @question.body %>
</p>

<table>
  <thead>
  <tr>
    <th>Answer</th>
    <th>Correct</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <%= render @question.answers %>
  </tbody>
</table>
<br>

<%= link_to 'New answer', new_admin_question_answer_path(@question) %> |
<%= link_to 'Edit question', edit_admin_question_path(@question) %> |
<%= link_to 'Delete question', admin_question_path(@question), method: :delete, data: { confirm: 'Really?' } %> |
<%= link_to 'Back', admin_test_path(@question.test) %>
