<%= render 'shared/errors', resource: @badge %>
<div class="row justify-content-center">
  <div class="col col-md-8">
    <h2><%= badge_form_header(@badge) %></h2>

    <%= form_with model: [:admin, @badge], local: true do |form| %>
      <div class="form-group">
        <p>
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :image_url %>
          <%= form.text_field :image_url, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :check_type %>
          <%= form.select :check_type,
                          check_types_collection,
                          { prompt: true },
                          { class: 'form-control' } %>
        </p>
        <p class="mb-2 partial">
          <%= form.text_field :param, class: 'hide' %>>
        </p>

        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
