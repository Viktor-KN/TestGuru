<tr>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle"><%= badge.description.truncate(50) %></td>
  <td class="align-middle"><%= badge.check_type %></td>
  <td class="align-middle"><%= badge.param %></td>
  <td class="align-middle"><%= link_to t('shared.show'), admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('shared.edit'), edit_admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('shared.delete'), admin_badge_path(badge), method: :delete, data: { confirm: t('shared.are_you_sure') } %></td>
</tr>
