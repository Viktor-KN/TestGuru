<%= form_with url: sessions_path, local: true do |form| %>
  <%= flash_message %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit 'Log In' %>
  </div>
<% end %>
